{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/biome.json",
      "{workspaceRoot}/pnpm-lock.yaml"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/vitest.config.[jt]s",
      "!{projectRoot}/tests/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/biome.json"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    }
  },
  "parallel": 3,
  "release": {
    "projects": [
      "@strata-game-library/shaders",
      "@strata-game-library/core",
      "@strata-game-library/r3f",
      "@strata-game-library/presets",
      "@strata-game-library/audio-synth",
      "@strata-game-library/capacitor",
      "@strata-game-library/model-synth",
      "@strata-game-library/react-native",
      "@strata-game-library/reactylon",
      "@strata-game-library/astro"
    ],
    "projectsRelationship": "independent",
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": true,
      "workspaceChangelog": {
        "createRelease": "github"
      }
    },
    "version": {
      "conventionalCommits": true,
      "fallbackCurrentVersionResolver": "disk",
      "generatorOptions": {
        "updateDependents": "auto"
      }
    },
    "releaseTagPattern": "{projectName}@{version}",
    "git": {
      "commit": true,
      "commitMessage": "chore(release): {projectName} {version} [skip actions]",
      "tag": true
    }
  }
}

{
  "name": "@strata-game-library/react-native",
  "version": "1.1.0",
  "description": "React Native plugin for Strata 3D - cross-platform input, device detection, and haptics for mobile games",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "android",
    "ios",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/"
  },
  "keywords": [
    "react-native",
    "strata",
    "input",
    "gamepad",
    "touch",
    "haptics",
    "device-detection",
    "cross-platform",
    "mobile",
    "ios",
    "android"
  ],
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbcom/strata-game-library.git",
    "directory": "plugins/react-native"
  },
  "homepage": "https://github.com/jbcom/strata-game-library/tree/main/plugins/react-native#readme",
  "bugs": {
    "url": "https://github.com/jbcom/strata-game-library/issues"
  },
  "peerDependencies": {
    "@strata-game-library/core": ">=1.4.0",
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@react-native/babel-preset": "^0.84.0",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-native": "^0.84.0",
    "rimraf": "^6.1.3",
    "tsup": "^8.5.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "access": "public"
  }
}
